{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "unbc/calendar-view",
    "title": "Event Calendar",
    "category": "campus-manager",
    "icon": "calendar-alt",
    "description": "Display the events calendar with multiple view options.",
    "keywords": ["calendar", "events", "unbc"],
    "textdomain": "unbc-events",
    "attributes": {
        "view": {
            "type": "string",
            "default": "month"
        },
        "categoryFilter": {
            "type": "string",
            "default": "all",
            "enum": ["all", "clubs", "unbc", "organizations", "sports"]
        },
        "organizationFilter": {
            "type": "string",
            "default": "all"
        },
        "listInitialItems": {
            "type": "number",
            "default": 30
        },
        "listLoadMoreCount": {
            "type": "number",
            "default": 15
        },
        "showWeekView": {
            "type": "boolean",
            "default": true
        },
        "showDayView": {
            "type": "boolean",
            "default": true
        },
        "eventSortOrder": {
            "type": "string",
            "default": "asc",
            "enum": ["asc", "desc"]
        },
        "monthDisplayMode": {
            "type": "string",
            "default": "popover",
            "enum": ["popover", "dropdown", "sidebar"]
        },
        "monthSidebarPosition": {
            "type": "string",
            "default": "right",
            "enum": ["left", "right"]
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css"
}
